extends adminMenu.pug
append datos
  div.row.m-0.p-0
    div.col-12.mt-5.text-center
      div(id="alerta")
      button.btn.btn-outline-dark(data-toggle="modal" data-target="#nuevo") A単adir
  div.row.m-0.p-0
    div.col-12.mt-5
      table.table.table-hover.table-responsive-sm
        thead
          tr
            th(scope="col") Nombre
            th(scope="col") Correo
            th(scope="col") Contrase単a
            th(scope="col") Pedidos
            th(scope="col") 
            th(scope="col") 
        each val in usuarios
          tbody
            tr
              td(scope="row") #{val.nombre}
              td #{val.correo}
              td #{val.pass}
              td
                a(href="/pedidos?client="+val._id) Ir
              td
                button.btn.btn-light Editar
              td 
                button.btn.btn-dark Borrar
      if usuarios.length==0
        div.row.m-0
            div.col-12
                h5 No hay ningun usuario
  div.row.m-0.mb-5.mt-5
        div.col-6
          a(href="./usuarios?num=0") 
            button.btn.btn-outline-dark
              span.typcn.typcn-chevron-left
              span.typcn.typcn-chevron-left
          a(href="./usuarios?num="+(num-5)) 
            button.btn.btn-outline-dark
              span.typcn.typcn-chevron-left
        div.col-6
          a(href="./fotos?num="+(num+5))
            button.btn.btn-outline-dark
              span.typcn.typcn-chevron-right

  //**************  NUEVO ***********************************************************


  div.modal.fade(id="nuevo" tabindex="-1" role="dialog" aria-labelledby="nuevoTitle" aria-hidden="true")
    div.modal-dialog.modal-dialog-centered.modal-dialog-scrollable.modal-lg(role="document")
      div.modal-content
        div.modal-header
          h5.modal-title(id="exampleModalLongTitle") Nuevo usuario
          button.close(type="button" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
        div.modal-body.row
          div.col-12.col-md-6
            h5.m-3 Nombre: 
            input.form-control(type="text",id="nombreUsuario" name="nombre")
            h5.m-3 Correo:
            input.form-control(type="email" id="corrreoUsuario", name="descripcion")
          div.col-12.col-md-6
            h5.m-3 Contrase単a:
            input.form-control(type="text" id="contraUno", name="descripcion")
            h5.m-3 Repite Contrase単a:
            input.form-control(type="text" id="contraDos", name="descripcion")
            
          div.invalid-feedback Todos los apartados tiene que estar rellenos

        div.modal-footer
          button.btn.btn-outline-dark(type="button" data-dismiss="modal") Cerrar
          button.btn.btn-dark(type="button",id="guardarProducto") Guardar


append script
  script(src="../javascript/admin/usuarios.js")
  