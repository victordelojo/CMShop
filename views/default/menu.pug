  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-secondary.pt-4.pb-4
        a.navbar-brand.w-25.d-none.d-md-inline(href="/")
          if icono
            img(src="./fotos/"+icono, alt="icono")
          else
            img.img-fluid(src="./logo.png", alt="Icono"  style="width:40%")
        a.navbar-brand.w-50.d-inline.d-md-none(href="/")
          if icono
            img(src="./fotos/"+icono, alt="icono")
          else
            img.img-fluid(src="./logo.png", alt="Icono"  style="width:40%")
        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon      
