              a.nav-link.dropdown-toggle(href="#", id="navbarDropdown", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")="Categor√≠as"
              div.dropdown-menu(aria-labelledby="navbarDropdown" id="categorias")
            li.nav-item
              a.nav-link(href="/quienesSomos")="Quienes Somos"
                span.sr-only="(current)"
            li.nav-item
              a.nav-link(href="/ayuda")="Ayuda"
          form.form-inline.my-2.my-lg-0
            input.form-control.mr-sm-2(type="search", placeholder="Buscar...", aria-label="Search" id="buscar")
            button.btn.btn-outline-dark.my-2.my-sm-0(type="button" id="btnBuscar")
              span.typcn.typcn-zoom
          a.btn.btn-outline-dark.ml-3.my-2.my-sm-0.rounded-circle(href="/cesta")
            span.typcn.typcn-shopping-cart.w-100
          a.btn.btn-lg.p-0.ml-3(style="width: 50px;height: 50px;" href="/inicio")
            if !sesion
              img.img-fluid(src="./usuario.png", alt="")
            else
              img.img-fluid(src="./usuarioIn.png", alt="")
